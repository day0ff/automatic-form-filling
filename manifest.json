{

  "manifest_version": 2,
  "name": "Fill forms inputs",
  "version": "0.0.1",

  "description": "Fill page forms inputs.",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
		"activeTab",
    "declarativeContent",
		"storage"
    ],

  "page_action": {
    "default_icon": "icons/icon32.png",
    "default_title": "Fill page forms inputs.",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://localhost/*"],
      "js": ["content.js"]
    }
  ]

}
